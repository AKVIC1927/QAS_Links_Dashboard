    id: section
    attributes:
      label: Section
      options: [ALL, US, Domestic, IN USA, WORK ORDER]
    validations: { required: true }
  - type: input
    id: label
    attributes: { label: Label (shown on the site) }
    validations: { required: true }
  - type: input
    id: url
    attributes: { label: URL, placeholder: https://... }
    validations: { required: true }
